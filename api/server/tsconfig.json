{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": ["vitest/importMeta", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["../*", "../"],
      "core/*": ["../core/*", "../core"],
      "entities/*": ["../core/entities/*", "../core/entities"],
      "usecases/*": ["../core/usecases/*", "../core/usecases"],
      "gateways/*": ["../core/gateways/*", "../core/gateways"],
      "adapters/*": ["../adapters/*", "../adapters"],
      "utils/*": ["../utils/*", "../utils"],
      "mock/*": ["../../mock/*", "../../mock"]
    }
  },
  "include": ["src/**/*", "mock/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
