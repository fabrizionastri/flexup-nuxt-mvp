{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["../app/*"],
      "@/*": ["../@/*"],
      "api/*": ["./*"],
      "usecases/*": ["./usecases/*"],
      "gateways/*": ["./gateways/*"],
      "adapters/*": ["./adapters/*"],
      "lib/*": ["../lib/*"],
      "utils/*": ["../lib/utils/*"],
      "entities/*": ["../lib/entities/*"],
      "mock/*": ["../mock/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
