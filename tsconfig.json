{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "app/*": ["./app/*"],
      "api/*": ["./api/*", "./api"],
      "usecases/*": ["./api/usecases/*", "./api/usecases"],
      "gateways/*": ["./api/gateways/*", "./api/gateways"],
      "adapters/*": ["./api/adapters/*", "./api/adapters"],
      "lib/*": ["./lib/*", "./lib"],
      "utils/*": ["./lib/utils/*", "./lib/utils"],
      "entities/*": ["./lib/entities/*", "./lib/entities"],
      "mock/*": ["./mock/*", "./mock"]
    },
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"]
  },
  "include": ["api/**/*", "app/**/*", "mock/**/*", "lib/**/*", "utils/**/*", "./*"],
  "files": ["mock/index.json", "tsconfig.json"]
}
