{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "strict": false,
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["./app/*"],
      "@/*": ["./@/*"],
      "api/*": ["./api/*"],
      "usecases/*": ["./api/usecases/*"],
      "gateways/*": ["./api/gateways/*"],
      "adapters/*": ["./api/adapters/*"],
      "lib/*": ["./lib/*"],
      "utils/*": ["./lib/utils/*"],
      "entities/*": ["./lib/entities/*"],
      "mock/*": ["./mock/*"]
    },
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"]
  },
  "include": ["api/**/*", "app/**/*", "mock/**/*", "lib/**/*", "utils/**/*", "./*"],
  "files": [
    "mock/index.json",
    "tsconfig.json",
    "./app/components/formatCurrency.ts",
    "./app/components/format.ts",
    "./lib/utils/isValidDate.ts",
    "./lib/utils/isSameDay.ts",
    "./lib/utils/dateOnly.ts",
    "./lib/utils/isInBoundPercent.ts",
    "./lib/utils/getDateForKey.ts",
    "./lib/utils/sumNumbers.ts",
    "./lib/utils/sumCappedNumbers.ts",
    "./lib/utils/scaleNumbersByMagnitude.ts",
    "./lib/utils/roundNumberToPrecision.ts",
    "./lib/utils/roundAndAdjustNumbersToPrecision.ts",
    "./lib/utils/roundNumbersToPrecision.ts",
    "./lib/utils/getNumberForKey.ts",
    "./lib/utils/isInBound.ts",
    "./lib/utils/today.ts",
    "./lib/utils/roundAndAdjustNumbersToMatchRoundedSum.ts",
    "./lib/utils/getNumberByKey.ts",
    "./lib/utils/isValidNumber.ts",
    "./lib/utils/getMiddleDate.ts",
    "./lib/utils/getNumberByKeys.ts",
    "./lib/utils/getEndOfMonth.ts",
    "./lib/utils/getTotalForKey.ts",
    "./lib/utils/calculateInterest.ts",
    "./lib/utils/calculateDuration.ts",
    "./lib/utils/sumNumberProps.ts",
    "./lib/utils/getTotalAmountDue.ts",
    "./lib/utils/calculatePayableCapFromArray.ts",
    "./lib/utils/calculatePayableRatioFromArray.ts",
    "./lib/utils/calculatePayableRatio.ts",
    "./lib/utils/sumValuesForKeys.ts",
    "./lib/utils/getTotalsByKeys.ts",
    "./lib/utils/assignPayableAmountFromCap.ts",
    "./lib/utils/assignPayableAmountFromRatio.ts",
    "./lib/utils/newFile.ts",
    "./lib/utils/newFile.1.ts"
  ]
}
