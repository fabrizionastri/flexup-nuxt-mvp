{
  "name": "flexup-nuxt-mvp",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "description": "MVP for the FlexUp app using Nuxt",
  "author": "Fabrizio Nastri",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "format": "prettier --write .",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "prepare": "nuxt prepare",
    "preview": "nuxt preview",
    "test:cov": "vitest --coverage",
    "test": "vitest --reporter verbose",
    "server": "nodemon",
    "db": "json-server --port 3057 --watch ./db/db.json",
    "jsonServer": "json-server --port 3057 --watch ./mock/jsonServer/index.json",
    "generateIndex": "ts-node lib/devUtils/generateIndex.ts",
    "generateInMemoryIndex": "ts-node lib/devUtils/generateInMemoryIndex.ts",
    "generateCurrencyIdType": "ts-node --transpile-only lib/devUtils/generateCurrencyIdType.ts",
    "resetjsonserver": "ts-node lib/devUtils/resetJsonServer.ts",
    "gen": "pnpm generateIndex && pnpm generateInMemoryIndex && generateCurrencyIdType && pnpm resetjsonserver",
    "all": "concurrently \"npm run jsonServer\" \"npm run nodemon\"  \"npm run dev\" \"npm run test\" ",
    "hono": "nodemon"
  },
  "dependencies": {
    "@hono/node-server": "^1.2.0",
    "@mdi/font": "^7.2.96",
    "@paralleldrive/cuid2": "^2.2.2",
    "@pinia/nuxt": "^0.5.1",
    "@tailwindcss/forms": "^0.5.6",
    "axios": "^1.5.1",
    "hono": "^3.9.2",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@nuxt/devtools": "latest",
    "@nuxt/image": "1.0.0-rc.3",
    "@nuxt/test-utils": "^3.9.0",
    "@nuxt/types": "^2.17.1",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/tailwindcss": "^6.8.0",
    "@pinia-plugin-persistedstate/nuxt": "^1.2.0",
    "@pinia/testing": "^0.1.3",
    "@types/node": "^20.8.2",
    "@types/vscode": "^1.84.1",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "^1.0.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/language-plugin-pug": "^1.8.15",
    "@vue/test-utils": "^2.4.3",
    "@vueuse/core": "^10.5.0",
    "@vueuse/nuxt": "^10.5.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vitest": "^0.3.20",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "eslint-plugin-vue": "^9.17.0",
    "eslint-plugin-vue-pug": "^0.6.0",
    "happy-dom": "11.0.0",
    "nodemon": "^3.0.1",
    "nuxt": "^3.7.4",
    "playwright-core": "^1.40.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "pug": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "vitest": "^1.0.4",
    "vitest-environment-nuxt": "^1.0.0"
  },
  "volta": {
    "node": "18.18.0"
  }
}
